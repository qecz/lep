<h2>Details Post</h2>

<p>

<%=@row['Content'] %>
 <br>
<%=@row['create_date'] %>
</p>
<br>
<h4>Comments</h4>


<% @comments.each do |post| %>

	<p>
	<%=post['content'] %>
<br>
	<font color="#999"> Added at <%=post['create_date'] %> </font>
	</p>
	<% end %>




<h4>Comments добавить</h4>

<form action="/details/<%=@row['id']%>" method="POST" role="form">
  
<textarea name="content" class="form-control" rows="3"></textarea>

<br>

  <button type="submit" class="btn btn-primary">Добавить коммент</button>

</form>